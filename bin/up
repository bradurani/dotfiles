#!/usr/bin/env bash

set -eux

brew update
brew upgrade --all
brew reinstall --HEAD fzf

npm update -g
gem update --system

pushd ~/src/bradrc
  bundle update
popd

rcup

pushd ~/.rbenv/plugins
  for plugin in *; do
    pushd "$plugin"
      git pull
    popd
  done
popd

if [ -x "$(command -v gcloud)" ]; then
  gcloud  components update
fi

cowsay "don't forget to update ~/src/dotfiles"

